<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".socialLoginManager.LoginActivitiy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취업 성공의 치트키"
            android:textStyle="bold"
            android:textSize="19sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직군별 추천으로 oooo 해보세요"
            android:textSize="16sp"
            />

        <ImageButton
            android:id="@+id/ibtn_naver"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/naverlogin" />

        <ImageButton
            android:id="@+id/ibtn_kakao"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:src="@drawable/kakao_login"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            />

    </LinearLayout>


</layout>